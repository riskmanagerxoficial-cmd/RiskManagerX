import { defineConfig } from 'vite';
import react from '@vitejs/plugin-react';

export default defineConfig({
  plugins: [react()],
  build: {
    rollupOptions: {
      output: {
        manualChunks(id) {
          if (id.includes('node_modules')) {
            // Agrupa bibliotecas pesadas em seus próprios chunks
            if (id.includes('@supabase/supabase-js')) {
              return 'supabase';
            }
            if (id.includes('recharts')) {
              return 'charts';
            }
            if (id.includes('jspdf') || id.includes('jspdf-autotable') || id.includes('xlsx')) {
              return 'exporting';
            }
            if (id.includes('framer-motion')) {
              return 'motion';
            }
            // Agrupa bibliotecas do React em um chunk comum
            if (id.includes('react') || id.includes('react-dom') || id.includes('react-router-dom')) {
              return 'react-vendor';
            }
            // Agrupa as outras dependências em um chunk de vendor geral
            return 'vendor';
          }
        }
      }
    }
  },
  optimizeDeps: {
    exclude: ['lucide-react'],
  },
});
