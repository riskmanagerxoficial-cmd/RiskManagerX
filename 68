import React from 'react';
import { motion } from 'framer-motion';
import { useTradingStatus } from '../../hooks/useTradingStatus';
import { Clock } from 'lucide-react';

export const TradingStatusBanner: React.FC = () => {
  const statusInfo = useTradingStatus();

  if (!statusInfo) {
    return null; // Não renderiza nada até o estado ser determinado
  }

  const Icon = statusInfo.icon || Clock;

  return (
    <motion.div
      initial={{ opacity: 0, y: -20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.5 }}
      className={`flex items-center gap-4 rounded-xl p-3 border mb-8 ${statusInfo.color}`}
    >
      <Icon className="w-6 h-6 flex-shrink-0" />
      <div>
        <p className="font-semibold text-sm text-dark-text">Status do Mercado XAU/USD</p>
        <p className="text-sm">{statusInfo.message}</p>
      </div>
    </motion.div>
  );
};
